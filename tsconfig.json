{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "ES6",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": ["jest", "node"],
  },
  "compileOnSave": true,
  "exclude": ["./**/*.spec.ts"],
  "files": ["./src/index.ts"],
  "include": ["./src/**/*"],
}
